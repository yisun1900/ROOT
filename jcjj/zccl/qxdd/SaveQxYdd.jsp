	ls_sql+=" where  ddbh='"+ddbh+"'";
	ls_sql+=" and jc_zcdd.clzt in('00','02','03','05')";
	ps= conn.prepareStatement(ls_sql);
	ps.setDate(1,tdsj);
	ps.setString(2,tdblr);
